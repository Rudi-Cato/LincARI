// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/ubuntu
{
    "name": "lcas-gallium-ari35",
    // COMMENT OUT the "image" line as you will now build a custom image
    "image": "lcas.lincoln.ac.uk/lcas/pal-gallium-pal-metapkg-development-ari:35-dev",

    // UNCOMMENT and configure the "build" section to use your custom Dockerfile
    //"build": {
   //   "dockerfile": "Dockerfile", // Path to your new Dockerfile
  //    "context": "." // The build context is the root of your project
 //   },
    // Features to add to the dev container. More info: https://containers.dev/features.
    "features": {
       // "ghcr.io/devcontainers/features/desktop-lite:1": {}
    },
    // Use 'forwardPorts' to make a list of ports inside the container available locally.
    // "forwardPorts": [],
    "forwardPorts": [
        6080,
        5901
    ],
    "portsAttributes": {
        "6080": {
            "label": "novnc"
        },
        "5901": {
            "label": "vnc"
        }
    },
    // Use 'postCreateCommand' to run commands after the container is created.
    // Keep your run.sh here for runtime configurations.
    "postCreateCommand": "bash .devcontainer/run.sh",
    "containerUser": "root", // Your container runs as root
    // Configure tool-specific properties.
    // "customizations": {},
    "runArgs": [
    "--security-opt",
    "seccomp=unconfined",
    "--cap-add=NET_ADMIN",
    "--network=host",
    "-v", "/run/user/1000/pulse:/run/user/1000/pulse",
    "--device=/dev/snd",
    "-e", "PULSE_SERVER=unix:/run/user/1000/pulse/native",
    "-v", "/home/ari-user/.config/pulse/cookie:/root/.config/pulse/cookie"
],
    "containerEnv": {
        "ROS_LOCALHOST_ONLY": "0",
        "LIBGL_ALWAYS_SOFTWARE": "1" // Needed for software rendering of opengl
    },
    // Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
    "customizations": {
        "vscode": {
            "extensions": [
                "dotjoshjohnson.xml",
                "zachflower.uncrustify",
                "ms-python.python",
                "ms-vscode.cpptools",
                "redhat.vscode-yaml",
                "smilerobotics.urdf",
                "streetsidesoftware.code-spell-checker",
                "twxs.cmake",
                "king2021.vnc-extension",
                "nonanonno.vscode-ros2",
                "deitry.colcon-helper",
                "yzhang.markdown-all-in-one",
                "ms-azuretools.vscode-docker",
                "github.vscode-github-actions"
            ]
        }
    }
}